{
    "manifest_version": 3,
    "name": "Writing Streak",
    "description": "Base Level Extension",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "streak.html"
    }
  }